<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chenh.smartclassroom">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_v2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".view.login.LoginActivity"
            android:theme="@style/AppTheme.Red" />
        <activity
            android:name=".view.ContentActivity"
            android:label="@string/title_activity_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.classroom.ApplyForClassroomActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.blog.SendBlogActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.blog.BlogMessageActivity"
            android:label="@string/title_activity_blog_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserInfoActivity"
            android:label="个人信息"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.course.CourseManageActivity"
            android:label="设置"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.common.TempAcitivity" />
        <activity
            android:name=".view.common.OneLineFillActivity"
            android:label="@string/title_activity_one_line_fill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.common.OneAreaFillActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.TeamInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.HeadUpdateActivity" />
        <activity
            android:name=".view.blog.BlogActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.course.CourseOrPlanActivity"
            android:label="@string/title_activity_course_or_plan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.classroom.ClassroomDetailActivity"
            android:label="@string/title_activity_classroom_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>